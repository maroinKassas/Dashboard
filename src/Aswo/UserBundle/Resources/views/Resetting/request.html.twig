{% extends "@AswoUser/layout.html.twig" %}

{% block title %}
  	Connexion
{% endblock %}

{% block userContent %}
    <form class="login100-form validate-form" action="{{ path('fos_user_resetting_send_email') }}" method="POST" style="padding-right: 55px;">          
        <span class="login100-form-title p-b-34">
            Vous avez oublié votre mot de passe?
        </span>

        <div class="wrap-input100 rs1-wrap-input100 validate-input m-b-20" data-validate="Type user name" style="width: 100%;">
            <input id="first-name" class="input100" type="text" name="username" placeholder="Identifiant" >
                <span class="focus-input100"></span>
        </div>
        <div class="container-login100-form-btn">
            <button class="login100-form-btn">
                Récupérer mon mot de passe
            </button>
        </div>

        <div class="w-full text-center p-t-27 p-b-239">
            <a href="{{ path('fos_user_security_login') }}" class="txt2">
                Se connecter
            </a>
        </div>
    </form>
{% endblock %}